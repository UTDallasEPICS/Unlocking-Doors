generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Contact {
  id                  Int      @id @default(autoincrement())
  company             String
  prefix              String?
  firstName           String?
  lastName            String?
  suffix              String?
  salutation          String?
  professionalTitle   String?
  address             String?
  city                String?
  state               String?
  zipCode             Int?
  country             String?
  mainPhone           Int?
  directPhone         Int?
  mobilePhone         Int?
  emailAddress        String?
  narrative           String?
  group               String[]
  tag                 String[]
}

model User {
  id                  Int         @id @default(autoincrement())
  username            String      @unique
  permission          Permission  @default(VIEWER)
}

enum Permission {
  ADMIN
  EDITOR
  VIEWER
}
